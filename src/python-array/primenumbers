"Python version with array() of prime number tests in misc languages"

__revision__ = "1.0"


import array


def sqrt(x):
    "integer square root approximation"
    if x <= 0:
        return x
    h = x/2
    while 1:
        l = h
        h = (h + x/h)/2
        if abs(l-h) <= 1:
            return (h+x/h)/2


p = array.array('L', [0]*(1<<16))
p[0] = 2
p[1] = 3
for i in range(2, 1<<16):
    p[i] = p[i-1] + 2
    k = 1
    s = sqrt(p[i])
    while (k<i) and (p[k] <= s):
        if (p[i] % p[k]) == 0:
            p[i] += 2
            k = 1
            s = sqrt(p[i])
        else:
            k = k + 1

for i in range(0, 1<<16):
    print "%u %u" % (i, p[i])


